<% layout("/layouts/biolerplate") %>
    <body>
       
        <form method="post" action="/listings/<%= list1.id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
         <div class="row mt-3">
            <div class="col-8 offset-2">
                <h3>Edit Listing</h3>
        <div class="mb-3">
         <label for="title" class="form-label">Title:</label>
         <br>
         <input type="text" name="title" id="title" value="<%= list1.title %>" class="form-control" required>
         <div class="valid-feedback">Title looks good!</div>
         <div class="invalid-feedback">Enter the title</div>
         </div>
         <br>
         
         <div class="mb-3">
         <label for="description" class="form-label">Description:</label>
         <br>
         <textarea name="description" placeholder="write description" class="form-control" required><%= list1.description %></textarea>
         <div class="valid-feedback">Description looks good!</div>
         <div class="invalid-feedback">Enter the description</div> 
         </div>
         <br>
         <div>
            <p>Original Image</p>
            <img src="<%= list1.image.url %>" alt="Listing Image" style="max-width: 250px; max-height: 250px;">
         </div>
            <br>
         <div class="mb-3">
         <label for="image" class="form-label">Upload New Image</label>
         <br>
         <input type="file" name="image" id="image" class="form-control">
         </div>
         <br>
         <div class="row">
         <div class="mb-3 col-md-4">
         <label for="price" class="form-label">Price:</label>
         <br>
         <input type="number" name="price" id="price" value="<%= list1.price %>" class="form-control" required>
         <div class="invalid-feedback">Please enter valid price!</div>
         </div>
         <br>
         
         <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country:</label>
            <br>
            <input type="text" name="country" id="country" value="<%=list1.country %>" class="form-control" required pattern="[A-Za-z\s]+">
            <div class="invalid-feedback">Enter valid country name</div>
        </div>
        </div>
        <br>
                 <div class="mb-3">
         <label for="location" class="form-label">Location:</label>
         <br>
         <input type="text" name="location" id="location" value="<%=list1.location%>" class="form-control" required pattern="[A-Za-z\s]+">
         <div class="invalid-feedback">Enter valid location name</div>
         </div>
         <br>
    
         <button class="btn">Submit</button>
         <br>
         <br>
         <br>
    

        </form>
    </div>
</div>
    </body>
